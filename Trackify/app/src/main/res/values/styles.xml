<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="colorSwipeBackground" format="reference|color" />

    <style name="RoundedCorners">
        <item name="cornerSize">10%</item>
    </style>

    <style name="Track" parent="@android:style/TextAppearance">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Track.MainText">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/item_track_title</item>
    </style>

    <style name="Track.SecondaryText">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">@dimen/item_track_subtitle</item>
    </style>
</resources>
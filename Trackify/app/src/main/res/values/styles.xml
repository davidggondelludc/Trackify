<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- general purpose -->
    <style name="ShapeAppearanceOverlay.App.CornerSize5Percent" parent="">
        <item name="cornerSize">5%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize10Percent" parent="">
        <item name="cornerSize">10%</item>
    </style>

    <!-- item playlist -->
    <style name="Playlist">
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Playlist.MainText">
        <item name="android:maxLines">2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/item_playlist_title</item>
    </style>

    <style name="Playlist.SecondaryText">
        <item name="android:maxLines">1</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">@dimen/item_playlist_subtitle</item>
    </style>

    <!-- item track -->
    <style name="Track" parent="@android:style/TextAppearance">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Track.MainText">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/item_track_title</item>
    </style>

    <style name="Track.SecondaryText">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">@dimen/item_track_subtitle</item>
    </style>
</resources>
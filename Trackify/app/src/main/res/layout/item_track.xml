<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:colorBackground"
        android:paddingStart="@dimen/margin_horizontal"
        android:paddingEnd="@dimen/margin_horizontal">

        <ImageView
            android:id="@+id/cover"
            android:layout_width="@dimen/item_track_cover_size"
            android:layout_height="@dimen/item_track_cover_size"
            android:layout_marginTop="@dimen/item_track_cover_margin"
            android:layout_marginBottom="@dimen/item_track_cover_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/placeholder_musical_note" />

        <TextView
            android:id="@+id/title"
            style="@style/Track.MainText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintBottom_toTopOf="@+id/subtitle"
            app:layout_constraintEnd_toStartOf="@+id/dragHandle"
            app:layout_constraintStart_toEndOf="@+id/cover"
            app:layout_constraintTop_toTopOf="@+id/cover"
            android:text="@tools:sample/lorem" />

        <ImageView
            android:id="@+id/explicit"
            android:layout_width="16dp"
            android:layout_height="16dp"
            app:layout_constraintBottom_toBottomOf="@id/subtitle"
            app:layout_constraintStart_toStartOf="@+id/title"
            app:layout_constraintTop_toTopOf="@+id/subtitle"
            app:srcCompat="@drawable/ic_explicit" />

        <TextView
            android:id="@+id/subtitle"
            style="@style/Track.SecondaryText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/cover"
            app:layout_constraintEnd_toStartOf="@+id/dragHandle"
            app:layout_constraintStart_toEndOf="@+id/explicit"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_goneMarginStart="0dp"
            android:text="@tools:sample/lorem" />

        <ImageButton
            android:id="@+id/dragHandle"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_drag_handle" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
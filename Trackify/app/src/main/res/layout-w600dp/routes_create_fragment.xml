<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:menu="@menu/toolbar_routes_create" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvUserPlaylistsInRoute"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="8dp"
            android:choiceMode="singleChoice"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/mapView"
            app:layout_constraintTop_toBottomOf="@+id/playlist_to_share_title"
            tools:itemCount="3"
            tools:listitem="@layout/routes_create_playlist_item" />

        <TextView
            android:id="@+id/playlist_to_share_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/playlist_to_share_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/mapView"
            app:layout_constraintTop_toBottomOf="@+id/end_coordinates" />

        <ImageButton
            android:id="@+id/imgBtnEndRoute"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/end_coordinates"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/end_coordinates"
            app:layout_constraintTop_toTopOf="@+id/end_coordinates"
            app:srcCompat="@drawable/ic_finish" />

        <ImageButton
            android:id="@+id/pin_button"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/start_coordinates"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/start_coordinates"
            app:layout_constraintTop_toTopOf="@+id/start_coordinates"
            app:srcCompat="@drawable/ic_my_location" />

        <EditText
            android:id="@+id/start_coordinates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autofillHints="@string/start_hint"
            android:ems="10"
            android:inputType="text"
            android:labelFor="@id/start_title"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/start_title"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/end_coordinates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autofillHints="@string/start_hint"
            android:ems="10"
            android:inputType="text"
            android:labelFor="@id/start_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/end_title"
            app:layout_constraintTop_toBottomOf="@+id/start_coordinates" />

        <TextView
            android:id="@+id/start_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/start"
            app:layout_constraintBottom_toBottomOf="@+id/start_coordinates"
            app:layout_constraintStart_toEndOf="@+id/mapView"
            app:layout_constraintTop_toTopOf="@+id/start_coordinates" />

        <TextView
            android:id="@+id/end_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/end"
            app:layout_constraintBottom_toBottomOf="@+id/end_coordinates"
            app:layout_constraintStart_toEndOf="@+id/mapView"
            app:layout_constraintTop_toTopOf="@+id/end_coordinates" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/mapView"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/rvUserPlaylistsInRoute"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>




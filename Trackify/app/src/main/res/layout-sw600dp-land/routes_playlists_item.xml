<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:foregroundTint="#332C2C"
    android:paddingStart="15dp"
    android:paddingEnd="8dp">

    <TextView
        android:id="@+id/tvPlaylistInRoute"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/playlist"
        android:textSize="@dimen/item_playlist_title"
        app:layout_constraintEnd_toStartOf="@+id/imgBtnSeePlayList"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvUserPlaylistsInRoute"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/user"
        android:textSize="@dimen/item_playlist_subtitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imgBtnSeePlayList"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPlaylistInRoute" />

    <ImageButton
        android:id="@+id/imgBtnSeePlayList"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:foreground="@drawable/ic_arrow_forward"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>